<h1>Edit Facilities</h1>
<section>

    <h1>{{room.name}} - Details</h1> {{!-- comes from facilityController -> facilityController.get('/:roomId/decorateRoom' -> res.render(...room)  --}}
    <main>
        <div>
            <img src="{{room.imgUrl}}" width="200px">
        </div>
        <p>{{description}}</p>
        <p><strong>Price per night: {{price}}</strong></p>
        <div class="content pad-med">
            <p>List of facilities:</p>
            <form action="/facility/create/{{room._id}}/decorateRoom" method="post">
                <ul class="catalog">
                {{#each facilities}} {{!-- comes from facilityController -> facilityController.get('/:roomId/decorateRoom' -> res.render()  --}}
                <li><label><input type="checkbox" name="{{_id}}">{{label}}<img class="facility-icon" src="{{iconUrl}}"></label></li>
                {{/each}}
                <button class="action cta">Confirm facilities</button>
                </ul>
            </form>

        </div>
    </main>

</section>




